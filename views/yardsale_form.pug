extends layout

block content

    // Main content
    .container
        h1.subtitle
            strong= title
        form(method='POST' action='')
            // enctype='multipart/form-data'
            .columns
                .column.is-one-half
                    .field
                        label.label First Name
                        .control.has-icons-left.has-icons-right
                            input.input(type='text' id='firstname' name='firstname' placeholder='e.g. Alex' maxlength='25' required value=(undefined===yardsale ? '' : yardsale.firstName))
                    .field
                        label.label Last Name
                        .control.has-icons-left.has-icons-right
                            input.input(type='text' id='lastname' name='lastname' placeholder='e.g. Smith' maxlength='25' value=(undefined===yardsale ? '' : yardsale.lastName))
                    .field
                        label.label Username
                        .control.has-icons-left.has-icons-right
                            input.input(type='text' id='username' name='username' placeholder='e.g. yardsaleking' maxlength='25' value=(undefined===yardsale ? '' : yardsale.username))
                            span.icon.is-small.is-left
                                i.fas.fa-user
                    .field
                        label.label Phone Number
                        .control
                            input.input(type='tel' id='phone' name='phone' placeholder='e.g. 4018843030' maxlength='10' value=(undefined===yardsale ? '' : yardsale.phone))
                    .field
                        label.label Address
                        .control
                            input.input(type='text' id='address' name='address' placeholder='e.g. 1600 Pennsylvania Ave' maxlength='250' value=(undefined === yardsale ? '' : yardsale.address))
                    .field
                        label.label Address 2
                        .control
                            input.input(type='text' id='address2' name='address2' maxlength='250' placeholder=(undefined === yardsale ? '' : yardsale.address2))
                    .field
                        label.label City
                        .control
                            input.input(type='text' id='city' name='city' placeholder='e.g. Washington' maxlength='25' required value=(undefined === yardsale ? '' : yardsale.city))
                    .field
                        label.label State
                        .control
                            .select
                                select(id='state' name='state')
                                    option(selected) Select State
                                    option(value='CT') CT
                                    option(value='MA') MA
                                    option(value='ME') ME
                                    option(value='NH') NH
                                    option(value='RI') RI
                    .field
                        label.label Zip Code
                        .control
                            input.input(type='text' id='zipcode' name='zipcode' placeholder='e.g. 20500' maxlength='5' value=(undefined === yardsale ? '' : yardsale.zipcode))

                .column.is-one-half
                    .field
                        label.label.has-icons-left Date&nbsp;
                            i.fas.fa-calendar-alt
                        .control
                            input.input(type='date' id='date' name='date' value=(undefined===yardsale ? '' : yardsale.date))
                    .field
                        label.label Start Time
                        .control
                            input.input(type='time' id='starttime' name='starttime' placeholder='e.g. 10:00 AM' value=(undefined===yardsale ? '' : yardsale.starttime))
                    .field
                        label.label End Time
                        .control
                            input.input(type='time' id='endtime' name='endtime' placeholder='4:00 PM' value=(undefined===yardsale ? '' : yardsale.endtime))
                    .field
                        label.label Description
                        .control
                            textarea.textarea.is-primary(maxlength='1000' id='description' name='description' value=(undefined===yardsale ? '' : yardsale.description))
                    .field
                        label.label Add Image
                        .control
                            .file.is-boxed
                                label.file-label
                                    input.file-input(type='file' id='imagename' name='imagename' value=(undefined===yardsale ? '' : yardsale.imagename))
                                    span.file-cta
                                        span.file-icon
                                            i.fas.fa-upload
                                        span.file-label
                                            | Choose a file&mldr;
                    .field
                        .control
                            button.is-link(type='submit')
                                | Post your yard sale!

        if errors
            ul
                for error in errors
                    li!= error.msg
