extends layout

block content
	// Main Content
	.container
		h1.subtitle.has-text-centered
			strong #{title}: #{yardsale.address}

		p #[strong Date: ] #{yardsale.date}
		p #[strong Start Time: ] #{yardsale.starttime}
		p #[strong End Time: ] #{yardsale.endtime}
		p #[strong Host Name: ] #{yardsale.user.firstName}
		p #[strong Username: ]
			a(href=yardsale.user._id) #{yardsale.user.username}
		p #[strong Description: ] #{yardsale.description}
		hr
		p Do you really want to delete this Yardsale?

		form(method='POST' action='')
			div.form-group
				input#id.form-control(type='hidden' name='yardsaleid' required='true' value=yardsale._id )
			button.btn.btn-primary(type='submit') Delete
