extends layout

block content
	// Main content
	section.section
		.container
			h1.subtitle.has-text-centered
				strong= title
			.columns
				.column.is-one-half
					h1
						strong Welcome #{user.username}!
					br
					img(src='' alt='profile pic')
					p #[strong Username: ] #{user.username}
					p #[strong First Name: ] #{user.firstName}
					p #[strong Last Name: ] #{user.lastName}
					p #[strong E-mail: ] #{user.email}
					p #[strong Phone: ] #{user.phone}
					p #[strong Address: ] #{user.address}
					p #[strong Address 2: ] #{user.address2}
					p #[strong City: ] #{user.city}
					p #[strong State: ]
						if (user.state === 'CT')
							| CT
						else if (user.state === 'MA')
							| MA
						else if (user.state === 'ME')
							| ME
						if (user.state === 'NH')
							| NH
						if (user.state === 'RI')
							| RI
					p #[strong Zip Code: ] #{user.zipcode}
					hr
					p
						a(href=current_user._id+'/update').button.is-link Update Account
				.column.is-one-half
					h1
						strong Your Yard Sales
					br
					if yardsales
						each yardsale in yardsales
							p #[strong Date: ] #{yardsale.date}
							p #[strong Start Time: ] #{yardsale.starttime}
							p #[strong Address: ] #{yardsale.address}
							p #[strong City: ] #{yardsale.city}
							p #[strong State: ] #{yardsale.state}
							br