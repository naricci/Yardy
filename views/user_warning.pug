extends layout

block content
    // Main content
    .container
        h1.subtitle.has-text-centered
            strong= title
        .columns
            .column.is-one-third
            .column.is-one-third
                h1 #{title}
                hr

                if errors
                    for error in errors
                        h4!= error.msg

                hr
            .column.is-one-third