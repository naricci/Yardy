{
	"env": {
		"browser": true,
		"node": true,
		"es6": true,
		"jquery": true,
		"mongo": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"root": true,
	"rules": {
		"array-element-newline": [
			"error",
			"consistent"
		],
		"arrow-body-style": ["warn", "always"],
		"block-spacing": "error",
		"indent": [
			"warn",
			"tab",
			{ "SwitchCase": 1 }
		],
		"linebreak-style": [
			"warn",
			"unix"
		],

		"no-console": "off",
		"no-mixed-spaces-and-tabs": "off",
		"no-undef": "warn",
		"no-unused-vars": "warn",
		"quotes": [
			"warn",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"switch-colon-spacing": "error"
	}
}
