# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{js,json}]
charset = utf-8
indent_style = tab
indent_size = tab
tab_width = 2
quote_type = single
trim_trailing_whitespace = true

[*.{html,pug}]
charset = utf-8
indent_style = tab
indent_size = tab
tab_width = 2
quote_type = double
