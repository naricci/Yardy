# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*.{js,json}]
indent_style = tab
indent_size = tab
tab_width = 2
quote_type = single
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.html]
charset = utf-8
indent_style = tab
indent_size = tab
tab_width = 2
quote_type = double
